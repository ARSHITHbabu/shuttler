# Database Configuration
# Replace 'your_password' with your actual PostgreSQL password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/badminton_academy

# JWT Configuration
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-minimum-32-characters-generate-a-secure-one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Firebase Configuration (optional - for push notifications)
# FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=True
